@page "/{id:int?}"
@model Art.Pages.Pictures.IndexModel

@{
    ViewData["Title"] = "Pictures";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].PublishingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].Publisher.PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].PictureCategories)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PictureD.Pictures)
        {
            string selectedRow = "";
            if (item.ID == Model.PictureID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
                </td>
                <td>
                    @{
                        foreach (var category in item.PictureCategories)
                        {
                            @category.Category.ID @: @category.Category.CategoryName <br />
                        }
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
</table>
